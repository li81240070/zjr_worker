<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".view.activity.account.ForgetPswActivity">

    <include layout="@layout/toolbar_view" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="15dp"
        android:gravity="center"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/phoneEditET"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_marginRight="15dp"
            android:layout_weight="4"
            android:background="@drawable/shape_forget_psw_edit"
            android:hint="手机号"
            android:maxLength="11"
            android:numeric="integer"
            android:paddingLeft="10dp"
            android:textColorHint="#d3d3d3" />

        <Button
            android:id="@+id/sendMessageBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/shape_forget_psw_btn"
            android:text="验证"
            android:textColor="@android:color/white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/messageEditET"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:background="@drawable/shape_forget_not_psw_edit"
            android:hint="验证码"
            android:maxLength="10"
            android:numeric="integer"
            android:paddingLeft="10dp"
            android:textColorHint="#d3d3d3" />

    </LinearLayout>

    <Button
        android:id="@+id/nextBtn"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_margin="15dp"
        android:background="@drawable/shape_forget_psw_btn"
        android:text="下一步"
        android:textColor="@android:color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:visibility="gone"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="点击开始，即表示您同意" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="《法律声明及隐私政策》"
            android:textColor="@color/withdraw_btn_bg" />
    </LinearLayout>

</LinearLayout>
